# Application Settings
APP_NAME=MenuLens API
APP_VERSION=1.0.0
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://localhost:5432/menulens

# AI Provider (choose 'anthropic' or 'openai')
AI_PROVIDER=openai

# OpenAI API (GPT-4o with Vision)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Claude) - Optional alternative
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Image Search APIs (choose one or both)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Security
SECRET_KEY=your-secret-key-change-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
